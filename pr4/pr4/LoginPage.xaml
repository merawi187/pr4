<Window x:Class="pr4.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr4"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400" Icon="/closeup-shot-ginger-kitten-with-green-eyes-white-background.jpg">
    <Window.Background>
        <ImageBrush ImageSource="/closeup-shot-ginger-kitten-with-green-eyes-white-background.jpg"/>
    </Window.Background>
    <StackPanel VerticalAlignment = "Center" 
                HorizontalAlignment = "Center">
        <Label Content="Логин:"/>
        <TextBox x:Name="LoginTextBox"
                   Width="200" Margin="5"/>
        <Label Content="Пароль:"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Margin="5"/>
        <Button Content="Войти"
                Click="Login_Click" Width="200" Margin="5"/>
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" TextAlignment="Center" Visibility="Collapsed"/>
    </StackPanel>
</Window>

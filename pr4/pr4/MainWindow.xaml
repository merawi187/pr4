<Window x:Class="pr4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr4"
        mc:Ignorable="d"
        Title="Авторизация и Регистрация" Height="350" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/orig.webp"/>
    </Window.Background>
    <StackPanel VerticalAlignment = "Center" 
                HorizontalAlignment = "Center">
        
        <Button Content="Авторизация"
                Click="OpenLoginPage" Width="200" Margin="5"/>

        <Button Content="Регистрация"
                Click=" OpenRegisterPage" Width="200" Margin="5"/>
    </StackPanel>
</Window>
